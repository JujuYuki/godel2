-- Takes about 10min
--
def t0() : let a = newchan ty, 1 ; 
	   spawn g(a);
	   spawn r(a);

def r(x): recv x; 
    	  let b = newchan ty, 1;
	  spawn f(x,b);
	  spawn r(b);

def f(x,y): recv x;
    	    if
	      	    send y;
		    call f(x,y);
	    else
		    call f(x,y);
	    endif;
	      
def g(x): send x;
     	  call g(x);